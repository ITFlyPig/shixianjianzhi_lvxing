<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attractions_info"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbg"
    tools:context="com.SelfTourGuide.singapore.ui.HotelInfoActivity">

        <RelativeLayout
            android:id="@+id/relative"
            android:background="@color/appbg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/ll_back"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pressleft"/>
            </LinearLayout>
            <TextView
                android:id="@+id/title_top"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/ll_collection"
                android:layout_toRightOf="@+id/ll_back"
                android:gravity="center"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_centerInParent="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />
            <LinearLayout
                android:id="@+id/ll_collection"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:onClick="onColletionClick"
                android:layout_alignParentRight="true"
                android:gravity="center">
                <ImageView
                    android:onClick="onColletionClick"
                    android:id="@+id/iv_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/collectnor"/>
            </LinearLayout>

        </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@id/relative"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/navigation_line"
        />

    <com.SelfTourGuide.singapore.util.OverScrollView
        android:id="@+id/scrollIndicatorUp"
        android:layout_below="@id/line"
        android:scrollbars="none"
        android:layout_marginBottom="50dp"
        android:background="@color/appbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/appbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--简介-->
                <RelativeLayout
                    android:id="@+id/rl_intro"
                    android:layout_below="@id/iv_attraction"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_corner">
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/intro"/>
                    <TextView
                        android:id="@+id/intro"
                        android:layout_toRightOf="@id/image"
                        android:text="@string/intro"
                        android:layout_alignBottom="@id/image"
                        android:layout_alignTop="@id/image"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/magnify"
                        android:layout_marginRight="10dp"
                        android:layout_alignBottom="@id/image"
                        android:layout_alignTop="@id/image"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/moretro"/>
                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_below="@+id/image"
                        android:layout_alignRight="@id/magnify"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:lines="6"
                        android:ellipsize="end"
                        android:layout_alignLeft="@+id/intro"
                        android:textColor="#333333"/>

                </RelativeLayout>
                <!--酒店星级-->
                <RelativeLayout
                    android:id="@+id/rl_hotel_rating"
                    android:layout_below="@id/rl_intro"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:paddingRight="10dp"
                    android:background="@drawable/shape_corner">
                    <ImageView
                        android:id="@+id/image_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ratinginfo"/>
                    <TextView
                        android:layout_alignBottom="@id/image_price"
                        android:layout_alignTop="@id/image_price"
                        android:id="@+id/doorprice"
                        android:layout_toRightOf="@id/image_price"
                        android:text="@string/hotel_rating"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_below="@+id/image_price"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_alignLeft="@+id/doorprice"
                        android:textColor="#333333"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll_rating"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_alignLeft="@+id/doorprice"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/image_price"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/one_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rating"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/two_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rating"
                            android:visibility="gone"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/three_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rating"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/four_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rating"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/five_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rating"/>
                    </LinearLayout>

                </RelativeLayout>

                <!--电话-->
                <RelativeLayout
                    android:id="@+id/rl_phone"
                    android:layout_below="@id/rl_hotel_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_corner">
                    <ImageView
                        android:id="@+id/image_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/call"/>
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_toRightOf="@id/image_phone"
                        android:text="@string/phone"
                        android:gravity="center_vertical"
                        android:layout_alignBottom="@id/image_phone"
                        android:layout_alignTop="@id/image_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/hotel_phone"
                        android:layout_below="@+id/image_phone"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:paddingBottom="10dp"
                        android:textColor="@color/phonetext"
                        android:layout_alignLeft="@+id/tv_phone"
                       />

                </RelativeLayout>
                <!--地址-->
                <RelativeLayout
                    android:paddingRight="20dp"
                    android:id="@+id/rl_address"
                    android:layout_below="@id/rl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/shape_corner">
                    <ImageView
                        android:id="@+id/image_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/address"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_toRightOf="@id/image_address"
                        android:text="@string/address"
                        android:gravity="center_vertical"
                        android:layout_alignBottom="@id/image_address"
                        android:layout_alignTop="@id/image_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_below="@+id/image_address"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:layout_alignLeft="@+id/tv_address"
                        android:textColor="#333333"/>

                </RelativeLayout>
                <!--交通-->
                <RelativeLayout
                    android:paddingRight="20dp"
                    android:id="@+id/rl_subway"
                    android:layout_below="@id/rl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/shape_corner">
                    <ImageView
                        android:id="@+id/image_subway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/subway"/>
                    <TextView
                        android:id="@+id/tv_subway"
                        android:layout_toRightOf="@+id/image_subway"
                        android:text="@string/subway"
                        android:gravity="center_vertical"
                        android:layout_alignBottom="@id/image_subway"
                        android:layout_alignTop="@id/image_subway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/subway"
                        android:layout_below="@+id/image_subway"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_alignLeft="@+id/tv_subway"
                        android:textColor="#333333"/>

                </RelativeLayout>
                <!--官方网址-->
                <RelativeLayout
                    android:paddingRight="20dp"
                    android:id="@+id/rl_website"
                    android:layout_below="@id/rl_subway"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/shape_corner">
                    <ImageView
                        android:id="@+id/image_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/website"/>
                    <TextView
                        android:id="@+id/tv_website"
                        android:layout_toRightOf="@id/image_website"
                        android:text="@string/website"
                        android:layout_alignBottom="@id/image_website"
                        android:layout_alignTop="@id/image_website"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/website"
                        android:layout_below="@+id/image_website"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:paddingBottom="10dp"
                        android:layout_alignLeft="@+id/tv_website"
                        android:textColor="@color/phonetext"/>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </com.SelfTourGuide.singapore.util.OverScrollView>
    <LinearLayout
        android:id="@+id/ll_empty_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/network"/>
        <TextView
            android:layout_marginTop="20dp"
            android:text="@string/notnet"
            android:layout_below="@id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:hardwareAccelerated="true"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerunit"/>

</RelativeLayout>
