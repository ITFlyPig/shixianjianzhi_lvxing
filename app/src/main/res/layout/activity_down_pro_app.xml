<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/appbg"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:onClick="onClickBack"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_back"
                android:onClick="onClickBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/downtitle"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rl_top"
        android:layout_marginTop="120dp"
        android:layout_width="295dp"
        android:layout_height="277dp"
        android:background="@drawable/shape_corner_up">
        <ImageView
            android:id="@+id/yesicon_iv_one"
            android:layout_marginTop="77dp"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yesicon"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:layout_marginBottom="25dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginTop="77dp"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/yesicon_iv_one"/>
        <ImageView
            android:layout_below="@+id/yesicon_iv_one"
            android:id="@+id/yesicon_iv_two"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yesicon"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_below="@+id/yesicon_iv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/two"
            android:layout_marginBottom="25dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/yesicon_iv_two"/>
        <ImageView
            android:layout_below="@+id/yesicon_iv_two"
            android:id="@+id/yesicon_iv_thiree"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yesicon"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:layout_below="@+id/yesicon_iv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/three"
            android:layout_marginBottom="25dp"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/yesicon_iv_two"/>
        <RelativeLayout
            android:id="@+id/rl_down"
            android:layout_width="295dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_corner_bottom"
            >
            <ImageView
                android:id="@+id/iv_downicon"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/downicon"
                android:layout_marginLeft="61dp"
                android:layout_marginRight="9dp"
                android:visibility="gone"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_downicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:text="@string/downtitle"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_marginTop="80dp"
        android:layout_below="@+id/rl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
