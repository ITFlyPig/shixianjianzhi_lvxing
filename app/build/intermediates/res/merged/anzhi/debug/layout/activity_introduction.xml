<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduction"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/appbg"
    tools:context="com.SelfTourGuide.bangkok.ui.IntroductionActivity">
    <RelativeLayout
        android:id="@+id/relative"
        android:background="@color/appbg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"/>
        </LinearLayout>
        <TextView
            android:id="@+id/title_top"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/intro"
            />


    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_below="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/navigation_line"/>

    <com.SelfTourGuide.bangkok.util.OverScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/line"
        android:layout_width="fill_parent"
        android:background="@color/appbg"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/appbg">

            <TextView
                android:id="@+id/content"
                android:textSize="17sp"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/white"
                android:textColor="#3c3c3c"
                android:minHeight="500dp"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </com.SelfTourGuide.bangkok.util.OverScrollView>
    <LinearLayout
        android:id="@+id/ll_empty_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/network"/>
        <TextView
            android:layout_marginTop="20dp"
            android:text="@string/notnet"
            android:layout_below="@id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
