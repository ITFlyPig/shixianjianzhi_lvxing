<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_text"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dialogleft"
    android:layout_marginRight="@dimen/dialogleft"
    android:id="@+id/dialog"
    >
    <TextView
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#474747"
        android:text="@string/dialogtitle"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/content"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#474747"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:text="@string/dialogcontent"/>
    <View
        android:id="@+id/line"
        android:layout_below="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/navigation_line"
        android:layout_marginBottom="10dp"
        ></View>
    <Button
        android:id="@+id/affirmbutton"
        android:layout_below="@id/line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#00ac49"
        android:background="@color/white"
        android:textSize="18sp"
        android:paddingBottom="10dp"
        android:text="@string/okay"/>
</RelativeLayout>